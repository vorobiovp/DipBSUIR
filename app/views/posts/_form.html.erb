 
<div class="container">
   <div class="row"> 
  <div class="col-md-8">

<% if @post.present? %>
  <% @post.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger" role="alert"%>
    <%= msg %>
  </div>
<% end %>
<% end %>
<%= form_for(:post, url: path, method: "POST") do %>
  <div class="form-group">
    <%= label(:post, :title, "Heading") %>
    <%= text_field(:post, :title, class: "form-control") %>
  </div>
  <div class="form-group">
    <%= label(:post, :topic, "Choose a Topic") %>
    <%= select(:post, :topic, options_from_collection_for_select(@topics, "id", "title", @post.present? ? @post.topic_id : nil ), {}, {class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= label(:post, :body, "Text") %>
    <%= text_area(:post, :body, class: "form-control", rows: "10") %>
  </div>
   <%= submit_tag("Create", style: "margin-top:15px", class: "btn btn-outline-dark") %>
<% end %>
</div>